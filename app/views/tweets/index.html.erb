<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
    </head>
    <body>
		 <!-- Inicio Cabecera del Sistema -->
		<div id="encabezado">				
			<div id="logo">
				<img src="../assets/twitter_black.jpg" />
			</div>	
		</div>	
		<!-- Fin Cabecera del Sistema -->
		
        <div class="container-page">
			
            <!-- Inicio Cuerpo de la Pagina -->
            <div class="span-1">
				&nbsp;
			</div>
			<div class="span-23 last">
				<h3>Buscador de Tweets</h3>
			</div>
			<div class="span-24 last">
				<div class="span-1">
					&nbsp;
				</div>
				<div class="span-6">
					<table id="form">
						<tr>
							<td>
								<h4>Por Usuario</h4>
							</td>
						</tr>
						<tr>
							<td>
							<%= form_for(@tweet, :url => "user") do |f| %>
								<%= f.text_field :user %>
								<%= f.submit "Buscar" %>
							<% end %>
							</td>
						</tr>
					</table>
				</div>
				<div class="span-1">
					&nbsp;
				</div>
				<div class="span-15">
					<table id="form">
						<tr>
							<td>
								<h4>Tweet Encontrado</h4>
							</td>
						</tr>
						<tr>
							<td>
								<%= @tweet.read_message %>
							</td>
						</tr>
					</table>
				</div>
				<div class="span-1 last">
					&nbsp;
				</div>
			</div>
			<div class="span-24 last">
				<div class="span-1">
					&nbsp;
				</div>
				<div class="span-6">
					<table id="form">
						<tr>
							<td>
								<h4>Por StatusId del Tweet</h4>
							</td>
						</tr>
						<tr>
							<td>
								<%= form_for(@tweet, :url => "read_text") do |f| %>
									<%= f.text_field :status %>
									<%= f.submit "Buscar" %>
								<% end %>
							</td>
						</tr>
					</table>
				</div>
				<div class="span-1">
					&nbsp;
				</div>
				<div class="span-15">
					<table id="form">
						<tr>
							<td>
								<h4>Tweet Encontrado</h4>
							</td>
						</tr>
						<tr>
							<td class="form">
								<%= form_for(@tweet) do |f| %>
									<% @tweet.message = @tweet.index %>
									<%= f.text_field :message %>
									<%= f.submit "Agendar"%>
								<% end %>
							</td>
						</tr>
					</table>
				</div>
				<div class="span-1 last">
					&nbsp;
				</div>
			</div>
			
			<% @tweets.each do |tweet| %>					
				<div class="span-24 last">
					<div class="span-1">
						&nbsp;
					</div>
					<div class="span-22">
						<table id="form">
							<tr>
								<td>
									<%= tweet.message%>
								</td>
							</tr>
						</table>
					</div>
					<div class="span-1 last">
						&nbsp;
					</div>
				</div>
			<% end %>

            <!-- Fin Cuerpo de la Pagina -->
        </div>
    </body>
</html>

